<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_calls"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tarea"
        android:layout_below="@+id/list_view_calls"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_txt"
        android:text="Agregar Tarea"
        android:onClick="agregarTarea"
        android:layout_alignBaseline="@+id/txt_tarea"
        android:layout_alignBottom="@+id/txt_tarea"
        android:layout_alignEnd="@+id/list_view_calls" />

</LinearLayout>